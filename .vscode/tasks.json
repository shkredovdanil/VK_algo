{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file (C++23)",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++23",
                "-Wall",
                "-Wextra",
                "-O0"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "C++23 compilation with debug symbols"
        }
    ],
    "version": "2.0.0"
}